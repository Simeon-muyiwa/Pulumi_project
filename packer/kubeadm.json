{
    "builders": [
      {
        "type": "amazon-ebs",
        "region": "eu-west-2",
        "source_ami": "ami-0360648695d898cd7",
        "instance_type": "t2.micro",
        "ami_name": "ubuntu-jammy-{{timestamp}}",
        "ssh_username": "ubuntu",
        "tags": {
          "Name": "Kubeadm common AMI"
        },
        "ami_regions": ["eu-west-2"],
        "associate_public_ip_address": true,
        "ssh_agent_auth": true,
        "run_tags": {
          "Name": "Ubuntu Jammy Image Build"
        }
      }
    ],
    "provisioners": [
      {
        "type": "shell",
        "inline": [
          "sudo apt-get update",
          "sudo apt-get upgrade -y",
          "sudo apt-get install -y python3-pip",
          "sudo apt-get install -y sshpass",
          "sudo pip3 install ansible"
        ]
      },
      {
        "type": "ansible",
        "playbook_file": "../ansible/common_kubeadm.yaml"
      }
    ],
    "post-processors": [
      {
        "type": "shell-local",
        "inline": [
          "echo 'AMI_ID={{ .Builds.ArtifactID }}' > kubeadm_ami_id.txt"
        ]
      }
    ]
  }